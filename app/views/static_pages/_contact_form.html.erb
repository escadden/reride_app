<%= simple_form_for @contact, :html => {:class => "form-horizontal"} do |f| %>
	<%= f.input :email, placeholder: 'example@ex.com', label: 'Email', input_html: { class: 'input-lg' } %>
	<%= f.input :potential_relationship, input_html: { class: 'input-sm' }, collection: Contact::RELATIONSHIP_CHOICES.invert, prompt: "Select", label: "I am a:"%>
	<%= f.button :submit, 'Stay Informed', :class => 'btn btn-primary' %>
<% end %>



