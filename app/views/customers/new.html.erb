<% provide(:title, 'Sign up') %>
<h1>Sign up to stay informed!</h1>
  <div class="row">
    <div class="span6 offset3">
      <%= form_for(@customer) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :first_name %>
        <%= f.text_field :first_name %>

        <%= f.label :last_name %>
        <%= f.text_field :last_name %>

        <%= f.label :email %>
        <%= f.text_field :email %>
      
        <%= f.radio_button :type, 'Customer' %>
        <%= f.label :type, 'Customer', :value => 'Customer', :style => "display:inline" %>
        <%= f.radio_button :type, 'Reseller' %>
        <%= f.label :type, 'Reseller', :value => 'Reseller', :style => "display:inline" %>
        <%= f.radio_button :type, 'Bike_Shop' %>
        <%= f.label :type, 'Bike Shop', :value => 'Bike_Shop', :style => "display:inline" %>
        
        <%= f.submit "Keep me informed", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </div>