<script type="text/javascript">
jQuery(function($) {
// when the #model field changes
  $("#bike_models_name").change(function() {
    // make a POST call and replace the content
    var model = $('select#bike_models_name :selected').val();
    if(model == "") model="0";
    jQuery.get('/bikes/update_year_select/' + model, function(data){
        $("#modelYears").html(data);
    })
    return false;
  });
})
</script>

<%= form_for('bike') do |f| %>
	<%= f.fields_for :models do |ff| %>
		<%= ff.label :name, 'Model' %>
		<% if !current_models.blank? %>
			<%= ff.collection_select :name, current_models, :id , :name, include_blank: true %>
		<% else %>
			<%= ff.collection_select :name, [], :id , :name, include_blank: true %>
		<% end %>
	<% end %>
<% end %>












