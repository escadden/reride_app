<h1>Listing bikes</h1>

<table>
  <thead>
    <tr>
      <th>Year Manufactured</th>
      <th>Make</th>
      <th>Model</th>
      <th>Kind</th>
      <th>Msrp</th>
      <th>Current price</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bikes.each do |bike| %>
      <tr>
        <td><%= bike.year_manufactured %></td>
        <td><%= bike.make %></td>
        <td><%= bike.model %></td>
        <td><%= bike.kind %></td>
        <td><%= bike.msrp %></td>
        <td><%= bike.current_price %></td>
        <td><%= link_to 'Show', bike %></td>
        <td><%= link_to 'Edit', edit_bike_path(bike) %></td>
        <td><%= link_to 'Destroy', bike, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

